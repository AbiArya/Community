# AWS Infrastructure Configuration
# Copy this to .env.aws.local and fill in your values
# DO NOT COMMIT .env.aws.local!

# AWS Account & Region
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=YOUR_ACCOUNT_ID_HERE
AWS_PROFILE=community-app

# Database (RDS PostgreSQL) - Fill after Phase 1 deployment
AWS_RDS_ENDPOINT=your-db-endpoint.rds.amazonaws.com
AWS_RDS_PORT=5432
AWS_RDS_DATABASE=community
AWS_RDS_SECRET_ARN=arn:aws:secretsmanager:us-east-1:ACCOUNT:secret:community-db-credentials-dev

# Storage (S3 + CloudFront) - Fill after Phase 2 deployment
AWS_S3_PHOTOS_BUCKET=community-app-photos-dev-YOUR_ACCOUNT_ID
AWS_CLOUDFRONT_DOMAIN=xxx.cloudfront.net

# Authentication (Cognito) - Fill after Phase 3 deployment
AWS_COGNITO_USER_POOL_ID=us-east-1_xxxxx
AWS_COGNITO_CLIENT_ID=xxxxx
AWS_COGNITO_REGION=us-east-1

# API Gateway - Fill after Phase 4 deployment
AWS_API_GATEWAY_URL=https://xxxxx.execute-api.us-east-1.amazonaws.com/prod

# WebSocket API - Fill after Phase 5 deployment
NEXT_PUBLIC_WEBSOCKET_URL=wss://xxxxx.execute-api.us-east-1.amazonaws.com/prod
REDIS_ENDPOINT=your-redis.cache.amazonaws.com:6379

# Environment
NODE_ENV=development

